@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Nerd.Abp.DynamicPlugin.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model Nerd.Abp.DynamicPlugin.Pages.DynamicPlugin.UploadModel
@inject IHtmlLocalizer<DynamicPluginResource> L
@{
    Layout = null;
}

<form method="post" asp-page="/DynamicPlugin/Upload" enctype="multipart/form-data">
    <abp-modal>
        <abp-modal-header title="@L["Upload Package"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="UploadFileDto.Name"></abp-input>
            <abp-input asp-for="UploadFileDto.File"></abp-input>
        </abp-modal-body>
            <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
